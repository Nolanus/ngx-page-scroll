{
  "name": "ngx-page-scroll-demo",
  "version": "0.0.0",
  "scripts": {
    "build": "ng build",
    "build:app": "ng build --prod --baseHref=/ngx-page-scroll/",
    "build:lib": "ng build ngx-page-scroll-core --prod && ng build ngx-page-scroll --prod && npm run copy:readme",
    "copy:readme": "copyfiles README.md dist/ngx-page-scroll && copyfiles README.md dist/ngx-page-scroll-core",
    "commit": "git-cz",
    "e2e": "ng e2e",
    "lint": "ng lint",
    "ng": "ng",
    "prerelease:lib": "ng lint && ng test --watch false && ng e2e && npm run build:lib",
    "release:lib": "npm publish dist/ngx-page-scroll-core && npm publish dist/ngx-page-scroll ",
    "start": "ng serve",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.1.2",
    "@angular/cdk": "~13.1.2",
    "@angular/common": "~13.1.2",
    "@angular/compiler": "~13.1.2",
    "@angular/core": "~13.1.2",
    "@angular/flex-layout": "^12.0.0-beta.34",
    "@angular/forms": "~13.1.2",
    "@angular/material": "~13.1.2",
    "@angular/platform-browser": "~13.1.2",
    "@angular/platform-browser-dynamic": "~13.1.2",
    "@angular/router": "~13.1.2",
    "normalize.css": "^8.0.1",
    "rxjs": "~7.5.2",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.1.3",
    "@angular/cli": "~13.1.3",
    "@angular/compiler-cli": "~13.1.2",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jasmine": "^3.6.3",
    "@types/jasminewd2": "~2.0.10",
    "@types/node": "^17.0.8",
    "codelyzer": "^6.0.2",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0",
    "jasmine-core": "~4.0.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.11",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "ng-packagr": "^13.1.2",
    "protractor": "~7.0.0",
    "ts-node": "~10.4.0",
    "tslint": "^6.1.3",
    "typescript": "~4.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
